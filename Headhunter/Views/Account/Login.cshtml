@using Headhunter.ViewModels
@model LoginViewModel

<form asp-action="Login" method="post" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Имя пользователя или почта</label>
        <input asp-for="Login" type="text" class="form-control" id="exampleInputEmail1">
        <span asp-validation-for="Login"></span>
    </div>

    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="inputPassword6" class="col-form-label">Пароль</label>
        </div>
        <div class="password col-auto">
            <input asp-for="Password" type="password" id="password-input" class="form-control" aria-describedby="passwordHelpInline">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="col-auto">
            <span id="passwordHelpInline" class="form-text">
                Миниммум 5 символов
            </span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
